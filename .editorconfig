# My EditorConfig
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2

# Examples

[*.{js,cs}]
indent_style = space

[*.js]
indent_style = space

[README.md]
indent_style = space

[src/**.js]
indent_style = space

[{package.json,package-lock.json}]
indent_style = space
